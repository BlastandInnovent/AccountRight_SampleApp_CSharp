@model MYOB.AccountRight.SDK.Contracts.Version2.GeneralLedger.GeneralJournalLine

            
<tr class="editorRow">
    @Html.HiddenFor(item => item.RowId)
    @Html.HiddenFor(item => item.RowVersion)
    <td>
        <button type="button" class="btn btn-link" onclick="javascript:deleteLine(this)"><i class="icon-remove" ></i></button>
    </td>
    <td>
        @Html.HiddenFor(item => item.Account.UID)
        @Html.TextBoxFor(item => item.Account.DisplayID, new { style = "width: 80px;", @class="accountnumber" })
    </td>
                 
    <td>
        @Html.TextBoxFor(item => item.Account.Name, new { style = "width: 150px;", @readonly = true })
    </td>
                 
    <td>
        @Html.HiddenFor(item => item.Job.UID)
        @Html.TextBoxFor(item => item.Job.Name, new { style = "width: 100px;" })
    </td>
                 
    <td>
        @Html.TextBoxFor(item => item.Memo, new { style = "width: 160px;" })
    </td>
                 
                 
    <td>
        @Html.HiddenFor(item => item.TaxCode.UID)
        @Html.TextBoxFor(item => item.TaxCode.Code, new { style = "width: 40px;" })
    </td>
    
    <td>
        @Html.TextBoxFor(item => item.TaxAmount, new { style = "width: 80px;", @class="currency" })
    </td>
           
    <td>
        @Html.CheckBoxFor(item => item.IsOverriddenTaxAmount, new { style = "width: 20px;" })
    </td> 
</tr>

